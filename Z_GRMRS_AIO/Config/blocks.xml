	<!-- <set xpath="/blocks/block[@name='cntDewCollector']/property[@name='ConvertToItem']/@value">drinkJarRiverWater</set> -->
	<!-- Активируем подбор мусора -->
	<append xpath="/blocks/block[@name='garbage_decor1']">
		<property name="CanPickup" value="true" param1="resourceCloth"/>
	</append>
	<append xpath="/blocks/block[@name='garbage_decor2']">
		<property name="CanPickup" value="true" param1="resourceScrapPolymers"/>
	</append>
	<append xpath="/blocks/block[@name='garbage_decor3']">
		<property name="CanPickup" value="true" param1="resourceBrokenGlass"/>
	</append>
	<append xpath="/blocks/block[@name='glassDebris01']">
		<property name="CanPickup" value="true" param1="resourceBrokenGlass"/>
	</append>
	<!-- При сломе крафтовые станции не уничтожаются -->
	<remove xpath="/blocks/block[@name='forge']/drop[@event='Destroy']"/>
	<append xpath="/blocks/block[@name='forge']">
		<drop event="Destroy" name="forge" count="1"/>
	</append>
	<remove xpath="/blocks/block[@name='workbench']/drop[@event='Destroy']"/>
	<append xpath="/blocks/block[@name='workbench']">
		<drop event="Destroy" name="workbench" count="1"/>
	</append>
	<remove xpath="/blocks/block[@name='cementMixer']/drop[@event='Destroy']"/>
	<append xpath="/blocks/block[@name='cementMixer']">
		<drop event="Destroy" name="cementMixer" count="1"/>
	</append>
	<remove xpath="/blocks/block[@name='chemistryStation']/drop[@event='Destroy']"/>
	<append xpath="/blocks/block[@name='chemistryStation']">
		<drop event="Destroy" name="chemistryStation" count="1"/>
	</append>
	<!-- Обыскиваемый тостер -->
	<append xpath="/blocks/block[@name='cntToaster']">
		<property name="Class" value="Loot"/>
		<property name='LootList' value='cntToaster'/>
	</append>
	<!-- Лут с шин -->
	<set xpath="/blocks/block[@name='decoCarTireSmallFlat']//drop[@event='Destroy']/@count">5,10</set>
	<set xpath="/blocks/block[@name='decoCarTireFlat']//drop[@event='Destroy']/@count">10,15</set>
	<set xpath="/blocks/block[@name='decoCarTirePile']//drop[@event='Destroy']/@count">15,20</set>
	<!-- При разборе колёс в мире можно получить колесо -->
	<append xpath="/blocks/block[@name='decoCarWheelFlat']">
		<drop event="Harvest" name="vehicleWheels" count="1" prob="0.2" tag="salvageHarvest"/>
	</append>
	<append xpath="/blocks/block[@name='decoCarWheelFlat02']">
		<drop event="Harvest" name="vehicleWheels" count="1" prob="0.2" tag="salvageHarvest"/>
	</append>
	<append xpath="/blocks/block[@name='decoCarWheelOffset01']">
		<drop event="Harvest" name="vehicleWheels" count="1" prob="0.2" tag="salvageHarvest"/>
	</append>
	<!-- Новый блок с вариантами выбора для флагов -->
	<append xpath="/blocks">
		<block name="flagBlockVariantHelper">
			<property name="Extends" value="flagWallHungUSA"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="flagWallHungUSA"/>
			<property name="ItemTypeIcon" value="all_blocks"/>
			<property name="DescriptionKey" value="flagBlockVariantHelperDesc"/>
			<property name="SelectAlternates" value="true"/>
			<property name="PlaceAltBlockValue" value="flagWallHungUSA,flagWallHungDuke,flagWallHungHonorDuty,flagWallHungValiant,flagWallHungTFP,flagWallHungGadsdenWhite,flagWallHungGadsdenBrown,flagWallHungGadsdenRed,flagWallHungGadsdenOrange,flagWallHungGadsdenYellow,flagWallHungGadsdenGreen,flagWallHungGadsdenBlue,flagWallHungGadsdenPurple,flagWallHungGadsdenGrey,flagWallHungGadsdenPink,flagWallHungGadsdenArmyGreen,flagTopWallHungUSA,flagTopWallHungDuke,flagTopWallHungHonorDuty,flagTopWallHungValiant,flagTopWallHungTFP,flagTopWallHungGadsdenWhite,flagTopWallHungGadsdenBrown,flagTopWallHungGadsdenRed,flagTopWallHungGadsdenOrange,flagTopWallHungGadsdenYellow,flagTopWallHungGadsdenGreen,flagTopWallHungGadsdenBlue,flagTopWallHungGadsdenPurple,flagTopWallHungGadsdenGrey,flagTopWallHungGadsdenPink,flagTopWallHungGadsdenArmyGreen,flagWallHungThick44Black,flagWallHungThick44Purple,flagTopWallHungThick44Purple,flagTopWallHungThick44Black"/>
			<property name="SortOrder1" value="U200"/>
			<property name="SortOrder2" value="0000"/>
			<property name="FilterTags" value="MC_playerBlocks,SC_playerHelpers"/>
		</block>
	</append>
	<!-- Уменьшаем выпадение электрики при разборке блоков -->
	<set xpath="/blocks/block/drop[@event='Harvest' and @name='resourceElectricParts']/@count">1,4</set>
	<!-- Можно поднимать ловушки -->
	<append xpath="/blocks/block[@name='trapSpikesWoodDmg0']">
		<property name="CanPickup" value="true" param1="trapSpikesWoodDmg0"/>
	</append>
	<append xpath="/blocks/block[@name='trapSpikesIronDmg0']">
		<property name="CanPickup" value="true" param1="trapSpikesIronDmg0"/>
	</append>
	<append xpath="/blocks/block[@name='barbedFence']">
		<property name="CanPickup" value="true"/>
	</append>
	<!-- Лутабельные мешки с трупами -->
	<remove xpath="/blocks/block[@name='bodyBagBlack']"/>
	<remove xpath="/blocks/block[@name='bodyBagYellow']"/>
	<remove xpath="/blocks/block[@name='bodyBagPile']"/>
	<remove xpath="/blocks/block[@name='bodyBagPileMix']"/>
	<remove xpath="/blocks/block[@name='bodyBagPair']"/>
	<remove xpath="/blocks/block[@name='bodyBagPairYellow']"/>
	<remove xpath="/blocks/block[@name='bodyBagPairMixed']"/>
	<remove xpath="/blocks/block[@name='bodyBagBlackFlies']"/>
	<remove xpath="/blocks/block[@name='bodyBagYellowFlies']"/>
	<append xpath="/blocks">
		<block name="bodyBagBlack">
			<property name="DisplayType" value="blockMulti"/>
			<property name="Material" value="Morganic"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="Entities/Misc/body_bagPrefab"/>
			<property name="ModelOffset" value="0,.5,.5"/>
			<property name="MultiBlockDim" value="1,1,2"/>
			<property name="WaterFlow" value="permitted"/>
			<property name="Collide" value="sight,movement,melee,bullet,arrow,rocket"/>
			<property name="MaxDamage" value="200"/>
			<drop event="Harvest" name="foodRottingFlesh" count="1,3" tag="butcherHarvest" tool_category="Butcher"/>
			<drop event="Harvest" name="resourceAnimalFat" count="1,2" prob="0.33" tag="butcherHarvest"/>
			<drop event="Harvest" name="resourcePotassiumNitratePowder" count="4,8" tag="butcherHarvest"/>
			<drop event="Harvest" name="resourceBone" count="6,10" tag="butcherHarvest"/>
			<drop event="Destroy" name="resourceScrapPolymers" count="2,5"/>
			<drop event="Fall" count="0" prob="0"/>
			<property name="SortOrder1" value="B437"/>
			<property name="SortOrder2" value="0000"/>
			<property name="FilterTags" value="MC_building,SC_decor,SC_commercial"/>
			<!-- <property name="DowngradeBlock" value="block_car_alarm_start" /> -->
			<property name="Class" value="Loot"/>
			<property name="LootList" value="bodyBagLoot"/>
		</block>
		<block name="bodyBagYellow">
			<property name="Extends" value="bodyBagBlack"/>
			<property name="Model" value="Entities/Misc/body_bag_yellowPrefab"/>
		</block>
		<block name="bodyBagPile">
			<property name="Extends" value="bodyBagBlack"/>
			<property name="Model" value="Entities/Misc/body_bag_pilePrefab"/>
			<property name="LootList" value="bodyBagPileLoot"/>
		</block>
		<block name="bodyBagPileMix">
			<property name="Extends" value="bodyBagPile"/>
			<property name="Model" value="Entities/Misc/body_bag_pile_mixPrefab"/>
		</block>
		<block name="bodyBagPair">
			<property name="Extends" value="bodyBagBlack"/>
			<property name="Model" value="Entities/Misc/body_bag_pairPrefab"/>
			<property name="LootList" value="bodyBagPairLoot"/>
		</block>
		<block name="bodyBagPairYellow">
			<property name="Extends" value="bodyBagPair"/>
			<property name="Model" value="Entities/Misc/body_bag_pair_yellowPrefab"/>
		</block>
		<block name="bodyBagPairMixed">
			<property name="Extends" value="bodyBagPair"/>
			<property name="Model" value="Entities/Misc/body_bag_pair_mixPrefab"/>
		</block>
		<block name="bodyBagBlackFlies">
			<property name="Extends" value="bodyBagBlack"/>
			<property name="Model" value="Entities/Misc/body_bag_fliesPrefab"/>
		</block>
		<block name="bodyBagYellowFlies">
			<property name="Extends" value="bodyBagBlack"/>
			<property name="Model" value="Entities/Misc/body_bag_yellow_fliesPrefab"/>
		</block>
	</append>
