<config>
	<!-- Joel - Одежда и броня-->
	<set xpath="/traders/trader_info[@id='1']/@reset_interval">7</set>
	<!-- Bob - Инструменты и транспорт-->
	<set xpath="/traders/trader_info[@id='6']/@reset_interval">7</set>
	<!-- Jen - Медицина и книги-->
	<set xpath="/traders/trader_info[@id='2']/@reset_interval">7</set>
	<!-- Hugh - Оружие и боеприпасы-->
	<set xpath="/traders/trader_info[@id='7']/@reset_interval">7</set>
	<!-- Rekt - Еда и фермерство-->
	<set xpath="/traders/trader_info[@id='8']/@reset_interval">7</set>
	<!-- POI - Торговые автоматы напитков -->
	<set xpath="/traders/trader_info[@id='4']/@reset_interval">7</set>
	<!-- POI - Торговые автоматы еды и конфет-->
	<set xpath="/traders/trader_info[@id='10']/@reset_interval">7</set>
	<!-- Настройка модификаторов продажи и покупки у торговцев -->
	<set xpath="/traders/@buy_markup">10</set>
	<set xpath="/traders/@sell_markdown">0.2</set>
	<!-- Аналогично предыдущему - для торговых автоматов -->
	<set xpath="/traders/trader_info[@id='4']/@override_buy_markup">10</set>
	<set xpath="/traders/trader_info[@id='10']/@override_buy_markup">10</set>
	<!-- Убираем дроны -->
	<remove xpath="/traders/trader_item_groups/trader_item_group/item[contains(@name,'Drone')]"/>
	<!-- Убираем мод на ускорение транспорта -->
	<remove xpath="/traders/trader_item_groups/trader_item_group[@name='schematicsVehiclesMods']/item[@name='modVehicleSuperChargerSchematic']"/>
	<!-- Убираем все семена и конфеты "О, чёрт!" из продажи -->
	<remove xpath="//trader_item_group[@name='seeds']"/>
	<remove xpath="//trader_item_group[@name='traderGeneral']//item[@group='seeds']"/>
	<remove xpath="/traders/trader_info[@id='8']/trader_items/item[@group='seeds']"/>
	<remove xpath="//trader_item_group[@name='foodCandy']//item[4]"/>
	<!-- Убираем сигару из продажи -->
	<remove xpath="//trader_item_group[@name='groupArmorMods']//item[@name='apparelCigar']"/>
	<!-- Убираем из продажи всю электрику, кроме некоторых товаров -->
	<remove xpath="//trader_item_group[@name='traderElectrical']/item[@name and not (@name='solarCell' or @name='solarbank' or @name='resourceElectricParts' or @name='lanternDecorLightBlockVariantHelper')]"/>
	<!-- Убираем из продажи рабочие станции -->
	<remove xpath="//trader_item_group[@name='workstations']"/>
	<remove xpath="//trader_item_group[@name='traderGeneral']//item[@group='workstations']"/>
	<!-- Убираем армейскую броню -->
	<remove xpath="//trader_item_group[@name='groupArmorT2Light']//item[@name='armorMilitaryGloves']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Light']//item[@name='armorMilitaryHelmet']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Light']//item[@name='armorMilitaryBoots']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Light']//item[@name='armorMilitaryLegs']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Light']//item[@name='armorMilitaryVest']"/>
	<remove xpath="//trader_item_group[@name='groupArmorAllLight']//item[3]"/>
	<!-- Убираем стальную броню -->
	<remove xpath="//trader_item_group[@name='groupArmorT2Heavy']//item[@name='armorSteelBoots']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Heavy']//item[@name='armorSteelLegs']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Heavy']//item[@name='armorSteelChest']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Heavy']//item[@name='armorSteelGloves']"/>
	<remove xpath="//trader_item_group[@name='groupArmorT2Heavy']//item[@name='armorSwatHelmet']"/>
	<remove xpath="//trader_item_group[@name='groupArmorAllHeavy']//item[3]"/>
	<!-- Устанавливаем ограничение по качеству продаваемой брони -->
	<set xpath="//trader_item_group[@name='groupArmorT0Light']//item[contains(@name, 'armor')]/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='groupArmorT1Light']//item[contains(@name, 'armor')]/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='groupArmorT1Heavy']//item[contains(@name, 'armor')]/@quality">2,4</set>
	<!-- Книги и журналы -->
	<set xpath="//trader_item_group[contains(@name, 'skillMagazines')]//item[contains(@name, 'SkillMagazine')]/@count">1,2</set>
	<setattribute xpath="/traders/trader_info[(@id='1' or @id='6' or @id='2' or @id='7' or @id='8' or @id='9')]/trader_items/item[@group='books']" name="count">1,2</setattribute>
	<setattribute xpath="/traders/trader_info[(@id='1' or @id='6' or @id='2' or @id='7' or @id='8' or @id='9')]/trader_items/item[contains(@group, 'skillMagazines')]" name="count">1,2</setattribute>
	<!-- Меньше некоторых медицинских расходников в продаже -->
	<set xpath="//trader_item_group[@name='medicine']//item[2]/@count">1,2</set>
	<set xpath="//trader_item_group[@name='medicine']//item[4]/@count">1,2</set>
	<!-- Меньше частей оружия в продаже -->
	<set xpath="//trader_item_group[@name='weaponsGunParts']//item[contains(@name, 'Parts')]/@count">1,2</set>
	<!-- Инструменты в продаже 2-4 тира -->
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeToolPickT1IronPickaxe']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeToolShovelT1IronShovel']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeToolAxeT1IronFireaxe']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeWpnSledgeT1IronSledgehammer']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeToolRepairT1ClawHammer']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='meleeToolSalvageT1Wrench']/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='rareTools']//item[@name='meleeToolSalvageT2Ratchet']/@quality">2,4</set>
	<!-- Ремнаборов и слитков в продаже меньше -->
	<set xpath="//trader_item_group[@name='tools']//item[@name='resourceRepairKit']/@count">1,2</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='resourceForgedIron']/@count">5,20</set>
	<set xpath="//trader_item_group[@name='tools']//item[@name='resourceForgedSteel']/@count">5,10</set>
	<!-- Оружие в продаже 2-4 тира -->
	<set xpath="//trader_item_group[@name='groupRangedAll']//item[contains(@name, 'gun')]/@quality">2,4</set>
	<set xpath="//trader_item_group[@name='groupMeleeAll']//item[contains(@name, 'meleeWpn')]/@quality">2,4</set>
	<!-- Частей электрики в продаже меньше -->
	<set xpath="//trader_item_group[@name='traderElectrical']//item[@name='resourceElectricParts']/@count">8,15</set>
	<!-- Торговцы открываются раньше -->
	<set xpath="//trader_info[@id='1']/@open_time">4:05</set>
	<set xpath="//trader_info[@id='6']/@open_time">4:05</set>
	<set xpath="//trader_info[@id='2']/@open_time">4:05</set>
	<set xpath="//trader_info[@id='7']/@open_time">4:05</set>
	<set xpath="//trader_info[@id='8']/@open_time">4:05</set>
	<!-- Стеклянные стрелы -->
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='ammoSupplies']">
		<item name="resourceArrowHeadFiberglass" count="4,12" prob="0.05"/>
		<!-- 5 -->
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='ammoArrowsBolts']">
		<item name="ammoArrowFiberglass" count="10,25"/>
		<item name="ammoCrossbowBoltFiberglass" count="10,25"/>
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='ammoAll']">
		<item name="ammoArrowFiberglass" count="10,25"/>
		<item name="ammoCrossbowBoltFiberglass" count="10,25"/>
	</append>
</config>