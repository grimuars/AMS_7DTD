<ByHowlune>
	<!--Remove a massive source of AddRemoveBuff netpackages. Players using multiple means its rapidly firing.-->
	<remove xpath="/blocks/block[@name='forge']/property[@name='ActiveRadiusEffects']"/>
	<!--Half tree seed output and add maximum radius to their placement, counters players spamming trees-->
	<set xpath="//block[starts-with(@name,'treePlanted') and(contains(@name, '1m'))]/property[@name='BigDecorationRadius']/@value">6</set>
	<!-- Disable block fall. Keep animations on everything but terrain.-->
	<remove xpath="//block/drop[@event='Fall']"/>
	<remove xpath="//block/property[@name='ShowModelOnFall']"/>
	<append xpath="//block[starts-with(@name,'terr')]">
		<property name="ShowModelOnFall" value="false"/>
	</append>
	<!--Changes grass checking on ticks to static-->
	<set xpath="/blocks/block/property[@name='Class' and @value='Tallgrass']/@value">Deadgrass</set>
	<!--Set turrets to wider target cone so players use less of them. Now takes 4 turrets to cover an entire 360 radius instead of 8.-->
	<set xpath="/blocks/block/property[@name='YawRange' and @value='90']/@value">120</set>
	<set xpath="/blocks/block/property[@name='PitchRange' and @value='90']/@value">120</set>
</ByHowlune>