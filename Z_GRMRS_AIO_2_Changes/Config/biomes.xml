<?xml version="1.0" encoding="UTF-8"?>
<biomes_aio_2>
	<!-- 1 Уменьшаем вероятность дождя и шторма -->
	<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='default']/@prob">90</set>
	<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='snow']/@prob">2</set>
	<set xpath="/worldgeneration/biomes/biome[@name='snow']/weather[@name='storm']/@prob">1</set>
	<set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='default']/@prob">90</set>
	<set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='rain']/@prob">2</set>
	<set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='storm']/@prob">1</set>
	<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='default']/@prob">90</set>
	<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='rain']/@prob">2</set>
	<set xpath="/worldgeneration/biomes/biome[@name='desert']/weather[@name='storm']/@prob">1</set>
	<set xpath="/worldgeneration/biomes/biome[@name='wasteland']/weather[@name='default']/@prob">90</set>
	<set xpath="/worldgeneration/biomes/biome[@name='wasteland']/weather[@name='rain']/@prob">2</set>
	<set xpath="/worldgeneration/biomes/biome[@name='wasteland']/weather[@name='storm']/@prob">1</set>
	<!-- 2 Черника, картошка и пшеница в сосновый лес -->
	<append xpath="/worldgeneration/biomes/biome[@name='pine_forest']/decorations">
		<decoration type="block" blockname="plantedBlueberry3Harvest" prob =".002"/>
		<decoration type="block" blockname="plantedPotato3Harvest" prob =".002"/>
		<decoration type="block" blockname="plantedWheat3Harvest" prob=".002"/>
	</append>
	<!-- 3 Настройка бонусов и сложности биомов -->
	<!-- Сосновый лес -->
    <set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/@lootstage_modifier">0</set>
    <set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/@lootstage_bonus">0</set>
    <set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/@gamestage_modifier">1</set>
    <set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/@gamestage_bonus">10</set>
    <set xpath="/worldgeneration/biomes/biome[@name='pine_forest']/@difficulty">3</set>
    <!-- Пустыня -->
    <set xpath="/worldgeneration/biomes/biome[@name='desert']/@lootstage_modifier">1</set>
    <set xpath="/worldgeneration/biomes/biome[@name='desert']/@lootstage_bonus">10</set>
    <set xpath="/worldgeneration/biomes/biome[@name='desert']/@gamestage_modifier">1.5</set>
    <set xpath="/worldgeneration/biomes/biome[@name='desert']/@gamestage_bonus">30</set>
    <set xpath="/worldgeneration/biomes/biome[@name='desert']/@difficulty">5</set>
    <!-- Снег -->
    <set xpath="/worldgeneration/biomes/biome[@name='snow']/@lootstage_modifier">2</set>
    <set xpath="/worldgeneration/biomes/biome[@name='snow']/@lootstage_bonus">20</set>
    <set xpath="/worldgeneration/biomes/biome[@name='snow']/@gamestage_modifier">2</set>
    <set xpath="/worldgeneration/biomes/biome[@name='snow']/@gamestage_bonus">50</set>
    <set xpath="/worldgeneration/biomes/biome[@name='snow']/@difficulty">7</set>
	<!-- Горелый биом -->
    <set xpath="/worldgeneration/biomes/biome[@name='burnt_forest']/@lootstage_modifier">.5</set>
    <set xpath="/worldgeneration/biomes/biome[@name='burnt_forest']/@lootstage_bonus">10</set>
    <set xpath="/worldgeneration/biomes/biome[@name='burnt_forest']/@gamestage_modifier">2.5</set>
    <set xpath="/worldgeneration/biomes/biome[@name='burnt_forest']/@gamestage_bonus">70</set>
    <set xpath="/worldgeneration/biomes/biome[@name='burnt_forest']/@difficulty">9</set>
    <!-- Пустошь -->
    <set xpath="/worldgeneration/biomes/biome[@name='wasteland']/@lootstage_modifier">2</set>
    <set xpath="/worldgeneration/biomes/biome[@name='wasteland']/@lootstage_bonus">30</set>
    <set xpath="/worldgeneration/biomes/biome[@name='wasteland']/@gamestage_modifier">3</set>
    <set xpath="/worldgeneration/biomes/biome[@name='wasteland']/@gamestage_bonus">90</set>
    <set xpath="/worldgeneration/biomes/biome[@name='wasteland']/@difficulty">11</set>
</biomes_aio_2>