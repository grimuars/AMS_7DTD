<recipes>
	<!-- Удаляем рецепт коллектора -->
	<remove xpath="/recipes/recipe[@name='cntDewCollector']"/>
	<!-- Новые рецепты -->
	<append xpath="/recipes">
		<!-- Семена пшеницы -->
		<recipe name="plantedWheat1" count="3" craft_time="1" tags="learnable">
			<ingredient name="resourceCropWheatPlant" count="1"/>
		</recipe>
		<!-- Новый крафт "колодца" -->
		<recipe name="cntDewCollector" count="1" tags="learnable,workbenchCrafting">
			<ingredient name="resourceWaterFilter" count="2"/>
			<ingredient name="resourceScrapPolymers" count="100"/>
			<ingredient name="resourceMetalPipe" count="50"/>
			<ingredient name="resourceWood" count="200"/>
			<ingredient name="resourceRockSmall" count="400"/>
		</recipe>
		<!-- Водяной фильтр -->
		<recipe name="resourceWaterFilter" count="1" tags="learnable,workbenchCrafting">
			<ingredient name="resourceScrapPolymers" count="200"/>
			<ingredient name="resourceCrushedSand" count="100"/>
			<ingredient name="resourceCoal" count="150"/>
			<ingredient name="resourceCloth" count="50"/>
			<ingredient name="resourceDuctTape" count="5"/>
		</recipe>
	</append>
</recipes>