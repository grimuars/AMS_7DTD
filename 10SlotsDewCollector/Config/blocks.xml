<configs>
	<append xpath="/blocks">
		<!-- Пшеница -->
		<!-- Стадия 1 -->
		<block name="plantedWheat1">
			<property name="Extends" value="cropsGrowingMaster" param1="CustomIcon"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="wheatitem"/>
			<property name="PlantGrowing.Next" value="plantedWheat2"/>
			<property name="UnlockedBy" value="craftingSeeds"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/Wheat.unity3d?WheatPrefab1"/>
			<property name="PlaceAsRandomRotation" value="true"/>
			<drop event="Destroy" name="plantedWheat1" count="1"/>
			<property name="SortOrder1" value="B953"/>
			<property name="SortOrder2" value="0000"/>
			<property name="Tags" value="seedSkill"/>
			<property name="Group" value="Resources"/>
		</block>
		<!-- Стадия 2 -->
		<block name="plantedWheat2">
			<property name="Extends" value="cropsGrowingMaster"/>
			<property name="CreativeMode" value="None"/>
			<property name="PlantGrowing.Next" value="plantedWheat3HarvestPlayer"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/Wheat.unity3d?WheatPrefab2"/>
			<property name="CustomIcon" value="wheatitem"/>
			<property name="Texture" value="20"/>
			<property name="Material" value="Mcorn"/>
			<drop event="Destroy" name="plantedWheat1" count="1"/>
			<property name="SortOrder1" value="B953"/>
			<property name="SortOrder2" value="0001"/>
		</block>
		<!-- Стадия 3 -->
		<block name="plantedWheat3Harvest">
			<property name="Extends" value="cropsHarvestableMaster"/>
			<property name="CustomIcon" value="wheatitem"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/Wheat.unity3d?WheatPrefab3"/>
			<drop event="Harvest" name="resourceCropWheatPlant" count="1" tag="wildCropsHarvest"/>
			<drop event="Harvest" name="resourceCropWheatPlant" prob="0.5" count="1" tag="bonusCropHarvest"/>
			<property name="SortOrder1" value="B953"/>
			<property name="SortOrder2" value="0002"/>
		</block>
		<!-- Помощник для посадки семян -->
		<block name="plantedWheatHarvestRandomHelper">
			<property name="Extends" value="plantedWheat3Harvest" param1="MultiBlockDim"/>
			<property name="CreativeMode" value="Dev"/>
			<property name="CustomIcon" value="wheatitem"/>
			<property name="CustomIconTint" value="ff8080"/>
			<property name="ItemTypeIcon" value="other"/>
			<property name="DescriptionKey" value="plantedCropsRandomHelperGroupDesc"/>
			<property name="DisplayInfo" value="Name"/>
			<property name="SortOrder1" value="B953"/>
			<property name="SortOrder2" value="0003"/>
			<property name="FilterTags" value="MC_helpers,SC_helperOutdoor"/>
		</block>
		<!-- Стадия 3 для посаженного игроком растения -->
		<block name="plantedWheat3HarvestPlayer">
			<property name="Extends" value="plantedWheat3Harvest"/>
			<property name="CreativeMode" value="None"/>
			<property name="CustomIcon" value="wheatitem"/>
			<property name="DescriptionKey" value="plantedWheat3HarvestDesc"/>
			<drop event="Harvest" name="resourceCropWheatPlant" count="2" tag="cropHarvest"/>
			<drop event="Harvest" name="resourceCropWheatPlant" prob="0.5" count="1" tag="bonusCropHarvest"/>
			<property name="DowngradeBlock" value="plantedWheat1"/>
			<property name="SortOrder1" value="B953"/>
			<property name="SortOrder2" value="0004"/>
		</block>
	</append>
	<!-- Удаляем водяной коллектор -->
	<remove xpath="/blocks/block[@name='cntDewCollector']"/>
	<!-- Превращаем водяной коллектор в колодец и меняем параметры -->
	<append xpath="/blocks">
		<block name="cntDewCollector">
			<property name="Class" value="DewCollector"/>
			<property name="UnlockedBy" value="craftingWorkstations"/>
			<property name="WorkstationIcon" value="ui_game_symbol_water"/>
			<property name="CreativeMode" value="Player"/>
			<property name="DescriptionKey" value="dewCollectorDesc"/>
			<property name="Material" value="MFuelBarrelPolymer"/>
			<property name="CustomIcon" value="well"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/Well.unity3d?Brunnen"/>
			<!-- <property name="MultiBlockDim" value="2,3,2"/> -->
			<property name="ImposterExchange" value="imposterBlock" param1="116"/>
			<property name="WaterFlow" value="permitted"/>
			<property name="Place" value="TowardsPlacerInverted"/>
			<property name="RestrictSubmergedPlacement" value="true"/>
			<property name="AllowedRotations" value="Basic90"/>
			<property name="Path" value="solid"/>
			<property name="IsDecoration" value="true"/>
			<property name="StabilitySupport" value="false"/>
			<property name="OpenSound" value="open_workbench"/>
			<property name="CloseSound" value="close_workbench"/>
			<property name="ConvertSound" value="bucketfill_water"/>
			<property name="MinConvertTime" value="7200"/>
			<!-- 21600 Game Seconds = 6 Game Hours -->
			<property name="MaxConvertTime" value="10800"/>
			<!-- 36000 Game Seconds = 10 Game Hours -->
			<property name="ConvertToItem" value="drinkJarRiverWater"/>
			<property name="EconomicValue" value="5"/>
			<property name="EconomicBundleSize" value="1"/>
			<property name="SellableToTrader" value="false"/>
			<property name="MaxDamage" value="200"/>
			<property name="HeatMapStrength" value="0"/>
			<property name="HeatMapTime" value="0"/>
			<property name="HeatMapFrequency" value="0"/>
			<property class="RepairItems">
				<property name="resourceScrapPolymers" value="10"/>
				<property name="resourceWood" value="30"/>
			</property>
			<drop event="Destroy" name="cntDewCollector" count="1"/>
			<property name="SortOrder1" value="B281"/>
			<property name="SortOrder2" value="0100"/>
			<property name="Group" value="Basics,Food/Cooking,Building,advBuilding"/>
			<property name="Tags" value="workstationSkill,twitch_workstation"/>
			<property name="FilterTags" value="MC_playerBlocks,SC_decor"/>
		</block>
	</append>
</configs>