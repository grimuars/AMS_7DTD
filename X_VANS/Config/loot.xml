<configs>
	<!-- Общее -->
	<insertBefore xpath="/lootcontainers/lootgroup[@name='groupScrapCommon']">
		<!-- УАЗ -->
		<lootgroup name="UAZ452group">
			<item name="vehicleUAZ452chassis"/>
		</lootgroup>
		<!-- БРДМ-2 -->
		<lootgroup name="BRDM2group">
			<item name="vehicleBRDM2chassis"/>
			<item name="vehicleBRDM2accessories"/>
		</lootgroup>
		<!-- Мародёр -->
		<lootgroup name="Maraudergroup">
			<item name="vehicleMarauderchassis"/>
			<item name="vehicleMarauderaccessories"/>
		</lootgroup>
	</insertBefore>
	<!-- УАЗ -->
	<append xpath="/lootcontainers/lootgroup[@name='vehiclePartsTiered']">
		<item group="UAZ452group" loot_prob_template="ProbT3"/>
	</append>
	<!-- БРДМ-2 -->
	<append xpath="/lootcontainers">
		<lootcontainer name="BRDM2" count="0" size="10,9" sound_open="UseActions/vehicle_storage_open" open_time="0" sound_close="UseActions/vehicle_storage_close" loot_quality_template="qualBaseTemplate"/>
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='vehiclePartsTiered']">
		<item group="BRDM2group" loot_prob_template="ProbT3"/>
	</append>
	<!-- Мародёр -->
	<append xpath="/lootcontainers/lootgroup[@name='vehiclePartsTiered']">
		<item group="Maraudergroup" loot_prob_template="ProbT3"/>
	</append>
</configs>