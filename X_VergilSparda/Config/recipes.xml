<VergilSpardaKillerQueen>
	<append xpath="/recipes">
		<!-- DRINKS — ORANGE JUICE -->
		<recipe name="drinkOrangeJuice" count="4" craft_time="60" craft_area="campfire">
			<ingredient name="foodFrozenOJCon" count="1"/>
			<ingredient name="drinkJarBoiledWater" count="4"/>
		</recipe>
		<!-- FOOD — FLOUR -->
		<recipe name="foodFlour" count="1" craft_time="25">
			<ingredient name="foodCropWheat" count="5"/>
			<ingredient name="resourceRockSmall" count="2"/>
		</recipe>
	</append>
	<!-- Заменяем в рецептах кукурузные зёрна на муку -->
	<!-- Cornmeal to Flour: foodBlueberryPie, foodPumpkinPie, foodPumpkinCheesecake, foodPumpkinBread, foodTunaFishGravyToast -->
	<set xpath="/recipes/recipe[starts-with(@name, 'food') 
								and not (contains(@name, 'Potato')) 
								and not (contains(@name, 'Meat')) 
								and not (contains(@name, 'Sham')) 
								and not (contains(@name, 'Corn')) 
								and not (contains(@name, 'Boiled')) 
								and not (contains(@name, 'Stew')) 
								and not (contains(@name, 'Shepards')) 
								and not (contains(@name, 'Spaghetti')) 
								and not (contains(@name, 'Bacon'))
								and not (contains(@name, 'Tacos'))]/ingredient[@name='foodCornMeal']/@name">foodFlour</set>
	<!-- Добавляем версии рецептов с маслом в костёр -->
	<append xpath="/recipes">
		<recipe name="foodSteakAndPotato" count="1" craft_area="campfire" craft_tool="toolCookingGrill" tags="perkMasterChef,learnable">
			<ingredient name="foodRawMeat" count="5"/>
			<ingredient name="foodCropPotato" count="2"/>
			<ingredient name="foodCropMushrooms" count="2"/>
			<ingredient name="foodButterSpread" count="1"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="1,3" operation="base_add" value="-1,-2" tags="foodRawMeat"/>
			</effect_group>
		</recipe>
		<recipe name="foodTunaFishGravyToast" count="1" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
			<ingredient name="foodCanTuna" count="1"/>
			<ingredient name="foodCornMeal" count="1"/>
			<ingredient name="foodCornBread" count="2"/>
			<ingredient name="foodButterSpread" count="3"/>
			<ingredient name="foodCanPeas" count="1"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="1,3" operation="base_add" value="-1,-2" tags="foodButterSpread"/>
			</effect_group>
		</recipe>
		<recipe name="foodSpaghetti" count="1" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
			<ingredient name="foodCanBeef" count="1"/>
